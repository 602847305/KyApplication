<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleView">
        <attr name="innerWidth" format="dimension"/>
        <attr name="outWidth" format="dimension"/>
        <attr name="innerColor" format="color"/>
        <attr name="outColor" format="color"/>
        <attr name="delayColor" format="color"/>
        <attr name="innerProgress" format="integer"/>
        <attr name="outProgress" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>


    <declare-styleable name="ColorBar">
        <attr name="barHeight" format="dimension" />    <!--背景圆环宽度-->
        <attr name="circleRadius" format="dimension" />    <!--进度圆环宽度-->
    </declare-styleable>

</resources>